%p
  = simple_form_for @parent, :method => :put do |f|
    - if @parent.is_a? CommercialOffer
      = f.input :definitions, |
      :input_html => {:spellcheck => "false", :id => "parent_definitions", :class => "content-editor"}
    = f.input :content, |
    :input_html =>{:spellcheck => "false", :id => "parent_content", :rows => "30", :class => "content-editor"}
    = f.submit "Save & exit"
    = f.submit "Save"
